{
    "manifest_version": 2,
    "name": "CatchAll Bird",
    "description": "Enable Thunderbird to handle CatchAll email addresses.",
    "version": "1.0.5",
    "author": "Jabb0",
    "applications": {
        "gecko": {
            "id": "catchallbird@jabb0",
            "strict_min_version": "78.0"
        }
    },
    "background": {
        "page": "background/background.html"
    },
    "options_ui": {
        "page": "optionsPage/options.html",
        "open_in_tab": false,
        "browser_style": true
    },
    "permissions": [
        "messagesRead",
        "accountsRead",
        "accountsFolders",
        "accountsIdentities",
        "messagesMove", 
        "storage",
        "menus"
    ],
    "icons": {
        "64": "images/envelopes-bulk-solid.svg",
        "32": "images/envelopes-bulk-solid.svg",
        "16": "images/envelopes-bulk-solid.svg"
    }
}